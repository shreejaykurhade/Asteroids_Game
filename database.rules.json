{
    "rules": {
        ".read": true,
        "users": {
            "$uid": {
                ".write": "$uid === auth.uid",
                ".validate": "newData.hasChildren(['email', 'displayName'])"
            }
        },
        "leaderboard": {
            ".write": "auth != null",
            ".indexOn": [
                "score"
            ]
        }
    }
}